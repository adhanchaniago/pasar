<div class= "row">
  <div class="col-md-6">
    <div class="thumbnail">
    <%= image_tag @listing.image.url %>
    </div>
  </div>
    <div class="col-md-6">
    <h3><%= @listing.name %></h3>
    <p><%= number_to_currency(@listing.price) %></p>
    <p>
    <strong>Description:</strong>
    <%= @listing.description %>

    </p>
  </div>
</div>

<% if current_user == @listing.user %>
<%= link_to 'Edit', edit_listing_path(@listing), class: "btn btn-custom-one" %> |
<% end %>
<div class="pull-left">
<% if @prev %> 
    <%= link_to "< Previous", @prev, class: "btn button-custom btn-custom-one" %>
<% end %>

<% if @next %>
    <%= link_to "Next >", @next, class: "btn button-custom btn-custom-one" %>
<% end %>

<%= link_to 'Back', listings_path, class: "btn button-custom btn-custom-one" %>
</div>